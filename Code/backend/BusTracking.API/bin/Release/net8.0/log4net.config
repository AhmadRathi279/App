<?xml version="1.0" encoding="utf-8" ?>
<log4net>
	<appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
		<!-- The log file path -->
		<file value="logs/app.log" />

		<!-- Maximum size of each log file before rolling over -->
		<maximumFileSize value="10MB" />

		<!-- Number of backup files to keep -->
		<maxSizeRollBackups value="5" />

		<!-- Rolling strategy (Date-based in this case) -->
		<datePattern value="yyyyMMdd" />

		<layout type="log4net.Layout.PatternLayout">
			<!-- Log message format -->
			<conversionPattern value="%d{ISO8601} [%t] %-5p %c %x - %m%n" />
		</layout>
	</appender>

	<root>
		<!-- Set logging level (DEBUG, INFO, WARN, ERROR, FATAL) -->
		<level value="DEBUG" />

		<!-- Attach the appender to the root logger -->
		<appender-ref ref="RollingFileAppender" />
	</root>
</log4net>
